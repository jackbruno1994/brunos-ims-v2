FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY apps/api/package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY apps/api/ ./

# Build TypeScript
RUN npm run build

# Copy wait-for-db script
COPY apps/api/wait-for-db.sh /wait-for-db.sh
RUN chmod +x /wait-for-db.sh

# Expose port
EXPOSE 4000

# Wait for database and start server
CMD ["/bin/sh", "-c", "/wait-for-db.sh && npx prisma migrate deploy && node dist/index.js"]
